        // if wants whoel year will refun gpa calculator
        if(sem.indexOf("No") > -1)
        {
            System.exit(0);
        }
        else if(sem.indexOf("Yes") > -1)
        {
            for (i = 0; i < 7; i++)
            {
                System.out.println("Please enter answers as you did for semester 1");

