                System.out.println("Is class " + period2 +  " weighted? Yes or No? " + "What grade do you have in this class");

                period2 = period2 + 1;
                String grade = UserInput.getString();
                System.out.println();// weighted or unweighted
                if(grade.indexOf("Yes") > -1)
